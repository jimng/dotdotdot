{
  "extends": "standard",
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  },
  "rules": {
      "comma-dangle": ["error", "only-multiline"],
      "indent": ["error", 4, { "SwitchCase": 1 }],
      "object-curly-spacing": ["error", "always"],
      "newline-after-var": ["error", "always"],
      "no-useless-return": 0,
      "semi": ["error", "always"],
      "space-before-function-paren": ["error", "never"]
  }
}
